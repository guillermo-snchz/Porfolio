@using Porfolio.Web.Core
@using Porfolio.Web.Data.Models
@model IEnumerable<Estudios>


<div class="card p-4">
	<h5 class="card-title text-center p-2">Estudios</h5>

	@foreach (var estudio in Model)
	{
		<div class="mb-4">
			<div class="d-flex justify-content-between align-items-start flex-wrap">
				<div>
					<h6 class="fw-bold mb-1">@estudio.Titulo</h6>
					<p class="text-muted mb-1">@estudio.Ubicacion</p>
				</div>
				<small class="text-muted">
					@(Tools.DateTimeConverterToCvDate(estudio.FechaInicio))
					-
					@(estudio.FechaFin is null ? "No disponible" : Tools.DateTimeConverterToCvDate(estudio.FechaFin))
				</small>
			</div>
		</div>
	}
</div>
