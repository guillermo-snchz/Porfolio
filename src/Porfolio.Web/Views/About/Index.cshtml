	ViewData["Title"] = "Sobre mí";
}
@model AboutViewModel;

@section Styles {
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

<style>
	div[class="col-12 mb-2"] > div[class="card p-4"] {
