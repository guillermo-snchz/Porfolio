@using System.Linq
@using Porfolio.Web.Core
@using Porfolio.Web.Data.Models

<div class="card p-4">

	<h5 class="card-title text-center p-2">Experiencia</h5>

	@foreach (Experiencia experiencia in Model)
	{
		<div class="d-flex justify-content-between align-items-start flex-wrap">
			<div>
				<h6 class="fw-bold mb-1">@experiencia.Empresa - @experiencia.Puesto</h6>
			</div>
			<small class="text-muted">
				@(Tools.DateTimeConverterToCvDate(experiencia.FechaInicio))
				-
				@(experiencia.FechaFin is not null ? (Tools.DateTimeConverterToCvDate(experiencia.FechaFin)) : "Actual")
			</small>
		</div>

		<ul class="mt-2">
			@foreach (var funcion in experiencia.Funciones!)
			{
				<li>@funcion.Descripcion</li>
			}
		</ul>

		@* @if (experiencia != Model.Last())
		{
			<hr />
		} *@
	}
</div>
