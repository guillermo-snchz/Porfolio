<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - GSnchz</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
	<div class="layout">
		<header class="site-header">
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					<span class="navbar-brand">@ViewData["Title"]</span>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="Index">Sobre mí</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Projects" asp-action="Index">Proyectos</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contacto</a></li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main class="site-main container">
			@RenderBody()
		</main>

		<footer class="site-footer">
			<div class="container">
				<p class="mb-0">© @DateTime.Now.Year - Tu Nombre</p>
				<p class="mb-0">
					<a href="https://github.com/guillermo-snchz" target="_blank" class="text-white me-2">GitHub</a> |
					<a href="https://linkedin.com/in/gsnchz" target="_blank" class="text-white ms-2">LinkedIn</a>
				</p>
			</div>
		</footer>
	</div>

	@RenderSection("Scripts", required: false)
	<script defer src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>