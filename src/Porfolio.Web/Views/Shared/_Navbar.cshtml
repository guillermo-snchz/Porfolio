@using Porfolio.Web.Core

<header class="site-header">
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary-color">
		<div class="container d-flex justify-content-between align-items-center">
			<!-- Sección activa a la izquierda -->
			<span class="navbar-brand me-auto">@ViewData["Title"]</span>

			<!-- Menú centrado -->
			<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item"><a class="nav-link mx-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "fw-bold text-white" : "")" asp-controller="Home" asp-action="Index">Inicio</a></li>
					<li class="nav-item"><a class="nav-link mx-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? " fw-bold text-white" : "")" asp-controller="About" asp-action="Index">Sobre mí</a></li>
					<li class="nav-item"><a class="nav-link mx-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? " fw-bold text-white" : "")" asp-controller="Projects" asp-action="Index">Proyectos</a></li>
					<li class="nav-item"><a class="nav-link mx-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? " fw-bold text-white" : "")" asp-controller="Contact" asp-action="Index">Contacto</a></li>
				</ul>
			</div>

			<div class="btn-group d-none d-lg-flex ms-auto gap-1">
				<a href="@(Constants.URL_CV_ES)" class="btn btn-primary btn-sm fw-bold" target="_blank"><span class="fi fi-es fis"></span> CV ES</a>
				<a href="@(Constants.URL_CV_EN)" class="btn btn-secondary btn-sm fw-bold" target="_blank"><span class="fi fi-gb fis"></span> CV ING</a>
			</div>

			<div class="dropdown d-lg-none ms-auto">
				<button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					📄 Descargar CV
				</button>
				<ul class="dropdown-menu dropdown-menu-end">
					<li><a class="dropdown-item" href="@(Constants.URL_CV_ES)" target="_blank"><span class="fi fi-es fis"></span> Español</a></li>
					<li><a class="dropdown-item" href="@(Constants.URL_CV_EN)" target="_blank"><span class="fi fi-gb fis"></span> Inglés</a></li>
				</ul>
			</div>

			<!-- Botón de hamburguesa para móviles -->
			<button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
		</div>
	</nav>
</header>